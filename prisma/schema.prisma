generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PacitentModel {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  emailList String 
  name String
  age Int
  height Float
  weight Float
  historical String?
  gender String
  certificates MedicalCertificateModel[]
}

model MedicalCertificateModel {
  id  String   @id @default(auto()) @map("_id") @db.ObjectId
  id_pacitent String @db.ObjectId
  name PacitentModel @relation(fields: [id_pacitent], references: [id])
  describe String?
  end_date DateTime
  start_date DateTime
} 

